<Window x:Class="SomeWpfTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SomeWpfTests"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Topmost="True" AllowsTransparency="True" Background="Transparent" WindowStyle="None" Opacity="0.15"
        ShowInTaskbar="True"
        xmlns:tb="http://www.hardcodet.net/taskbar">

    <Window.Resources>
        <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
            <MenuItem Header="button" Click="Button_Click" />
            <MenuItem Header="new window" Click="MenuItem_Click" />
        </ContextMenu>
    </Window.Resources>
    <Grid Background="Black">
        <tb:TaskbarIcon IconSource="moon.ico"
                        ContextMenu="{StaticResource SysTrayMenu}"></tb:TaskbarIcon>
    </Grid>
</Window>
